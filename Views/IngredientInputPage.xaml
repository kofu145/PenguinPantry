<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PenguinPantry.Views.IngredientInputPage"
             Title="NewPage1">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Grid ColumnDefinitions="*, 100" Margin="15">
            <Entry x:Name="entryIngredients" Grid.Column="0">

            </Entry>

            <Button Text="Enter" Grid.Column="1">

            </Button>
        </Grid>


        <Label HorizontalOptions="Center"
               FontSize="30">
            Or scan your receipt!
        </Label>
        <Button Margin="15" FontSize="40" Text="Scan">
            
        </Button>
    </VerticalStackLayout>
</ContentPage>