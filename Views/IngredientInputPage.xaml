<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PenguinPantry.Views.IngredientInputPage">
    <Shell.TitleView>
        <HorizontalStackLayout 
        Margin="0, 5, 0, 0"
        HorizontalOptions="Start"
        BackgroundColor="#EA4372">
            <Label FontSize="30" 
           FontAttributes="Bold"
           Text="PenguinPantry"></Label>
        </HorizontalStackLayout>
    </Shell.TitleView>

    <VerticalStackLayout>

        <Label Text="Add Ingredients" Margin="15" FontSize="30" HorizontalOptions="Center"></Label>
        
        <Grid ColumnDefinitions="*, 100" Margin="15">
            <Entry x:Name="entryIngredients" Grid.Column="0">

            </Entry>

            <Button Text="Enter" Grid.Column="1" x:Name="buttonIngredient">

            </Button>
        </Grid>

        <Label></Label>
        
        <Label HorizontalOptions="Center"
               FontSize="30">
            Or scan your receipt!
        </Label>
        <Button Margin="15" FontSize="40" Text="Scan">
            
        </Button>
    </VerticalStackLayout>
</ContentPage>