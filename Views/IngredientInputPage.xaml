<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PenguinPantry.Views.IngredientInputPage">
    <Shell.TitleView>
        <HorizontalStackLayout 
        Margin="0, 5, 0, 0"
        HorizontalOptions="Start">
            <Label FontSize="30" 
           FontAttributes="Bold"
           Text="PenguinPantry"></Label>
        </HorizontalStackLayout>
    </Shell.TitleView>

    <VerticalStackLayout>

        <Label Text="Add Ingredients" Margin="15" FontSize="30" HorizontalOptions="Center"></Label>

        <Frame Margin="15">
            <Grid ColumnDefinitions="*, 100" Margin="15">
                <Entry x:Name="entryIngredients" Grid.Column="0">

                </Entry>

                <Button FontSize="15" Text="Enter" Grid.Column="1" x:Name="buttonIngredient">

                </Button>
            </Grid>
        </Frame>
        

        <Label></Label>
        
        <Label HorizontalOptions="Center"
               FontSize="30">
            Or scan your receipt!
        </Label>
        <Frame Margin="15">
            <Button Margin="15" FontSize="15" Text="Scan">
            
            </Button>
        </Frame>
        
    </VerticalStackLayout>
</ContentPage>